@using Ecboard.ViewModels._PartialViews

@model ContactCardViewModel
@{
}

<style>
    .icon{
        font-size: 1.25rem;
    }
</style>

<div class="card my-2">
    <div class="card-body p-4 text-center">
        <span class="avatar avatar-xl mb-3 rounded" style="background-image: url(@(EcUserHelper.CheckUserImage(Model.UserID)))"></span>
        <h3 class="m-0 mb-1">
            <a href="#@Model.ContactID"> @* CONTACT DETAIL'a GİDİCEK' *@
                @(!String.IsNullOrEmpty(Model.UserID) ? EcUserHelper.GetUser(Model.UserID).UserName : Model.FullName)
            </a>
        </h3>
        <div class="text-secondary">@(!String.IsNullOrEmpty(Model.UnitTitle) ? Model.UnitTitle : "Unknown")</div>
        @if (!String.IsNullOrEmpty(Model.UserID))
        {
            <div class="mt-3">
                <span class="badge" style="background-color: @(EcUserHelper.GetUserRole(Model.UserID).Color)">@(EcUserHelper.GetUserRole(Model.UserID).Name)</span>
            </div>
        }
    </div>
    <div class="d-flex">
        @if (!String.IsNullOrEmpty(Model.Email))
        {
            <a href="mailto:@(Model.Email)" class="card-btn">
                <i class="ti ti-mail icon"></i>
                Email
            </a>
        }
        @if (!String.IsNullOrEmpty(Model.PhoneNumber))
        {
            <a href="tel:@(Model.PhoneNumber)" class="card-btn">
                <i class="ti ti-phone icon"></i>
                Call
            </a>
        }
    </div>
</div>
