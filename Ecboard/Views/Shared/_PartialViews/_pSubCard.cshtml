@model Ecboard.ViewModels.SubCardViewModel


    <div class="card card-sm">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-auto">
                    <span class="bg-@Model.BackgroundColor text-white avatar">
                        <i class="ti @Model.Icon"></i>
                    </span>
                </div>
                <div class="col">
                    <div class="font-weight-medium">
                        @Model.Value @Model.Title
                    </div>
                    <div class="text-secondary">
                        @Model.Description
                    </div>
                </div>
            </div>
        </div>
    </div>