@model Ecboard.ViewModels.SubCardWithChartViewModel

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="subheader">@Model.Title</div>
            <div class="ms-auto lh-1">
                <div class="dropdown">
                    <a class="dropdown-toggle text-secondary" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Model.DropdownText</a>
                    <div class="dropdown-menu dropdown-menu-end">
                        @Model.DropdownItems
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex align-items-baseline">
            <div class="h1 mb-0 me-2">@Model.Amount</div>
            <div class="me-auto">
                <span class="text-green d-inline-flex align-items-center lh-1">
                    @Model.PercentageChange% <!-- SVG icon can be inserted here -->
                </span>
            </div>
        </div>
    </div>
    <div id="@Model.ChartId" class="chart-sm" style="min-height: 40px;"></div>
</div>





