@model CardViewModel

<div class="col-md-6 col-lg-3">
    <div class="card @(Model.CardType == "borderless" ? "card-borderless" : "")" style="background-color: @(Model.CardColor ?? "white")">
        @if (!string.IsNullOrEmpty(Model.CardTitle))
        {
            <div class="card-header @(Model.CardHeaderClass)">
                <h3 class="card-title">
                    @Model.CardTitle
                    @if (!string.IsNullOrEmpty(Model.CardSubtitle))
                    {
                        <span class="card-subtitle">@Model.CardSubtitle</span>
                    }
                </h3>
            </div>
        }
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.CardDescription))
            {
                <p>@Model.CardDescription</p>
            }
        </div>
    </div>
</div>
