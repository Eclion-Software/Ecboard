@model ChartOptions

<div class="chart-container">
    <div id="@Model.ChartId" style="min-height: 201.9px;"></div>

    <script>
document.addEventListener("DOMContentLoaded", function () {
    if (window.ApexCharts) {
        console.log('Model Series:', @Html.Raw(Json.Serialize(Model.Series)));
        console.log('Model Labels:', @Html.Raw(Json.Serialize(Model.Labels)));
        console.log('Model ChartType:', @Html.Raw(Json.Serialize(Model.ChartType)));

        var options = {
            chart: {
                type: '@Model.ChartType',
                height: 240
            },
            series: @Html.Raw(Json.Serialize(Model.Series)),
            labels: @Html.Raw(Json.Serialize(Model.Labels)),
            xaxis: {
                categories: @Html.Raw(Json.Serialize(Model.Labels))
            },
            colors: @Html.Raw(Json.Serialize(Model.Colors)),
            tooltip: { theme: 'dark' }
        };

        console.log('Options:', options);  // Kontrol amaçlı

        new ApexCharts(document.getElementById('@Model.ChartId'), options).render();
    }
});

    </script>
</div>
